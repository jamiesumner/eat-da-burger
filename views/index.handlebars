<div class="container">
    <div class="row">
        <div class="col-md-12 text-center" id="top-bar">
            <img src="/assets/images/burger.png">
            <h1> Eat-Da-Burger! </h1>
        </div>
        <div class="col-md-6 text-center" class="burgers">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-md-9 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}
					</pre>
                </div>
                <div class="col-md-3 text-center">
                    <form action="index/update/{{this.id}}?_method=PUT" method="POST" class="button-size">
                        <input type="hidden" name="devour" value="1">
                        <button type="submit">Devour It!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-md-6 text-center" class="task">
            {{#each burger_data}}
            {{#if this.devoured}}
            <li class="list-group-item" id="eaten-burger-li">
                {{this.id}}. {{this.burgerName}}
            </li>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
            </form>
            <p>Enter a burger you want to eat, then click the "Submit" button.</p>
        </div>
    </div>
</div>